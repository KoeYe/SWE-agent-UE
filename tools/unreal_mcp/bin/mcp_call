#!/bin/bash

main() {
    if [ $# -eq 0 ]; then
        echo "Usage: mcp_call <tool_name> [<args_json>]"
        return 1
    fi
    
    local tool_name="$1"
    local args_json="${2:-{}}"
    
    # Call the Python script
    python3 "$(dirname "$0")/mcp_call.py" "$tool_name" "$args_json"
}

main "$@"
